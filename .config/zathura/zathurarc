# Disable statusbar. Default is "s"
set guioptions ""
# Show a tilde instead of the full home path
set statusbar-home-tilde "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 2
set selection-clipboard clipboard
map K zoom in
map J zoom out
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
set recolor true
set default-bg "#121212"
set default-fg "#ababab"
set statusbar-bg "#121212"
set statusbar-fg "#ababab"
set recolor-darkcolor "#ababab"
set recolor-lightcolor "#121212"
